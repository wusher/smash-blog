.row
  .eight.columns
    .row
      = form.label :title
      = form.text_field :title
    .row
      = form.label :pubdate
      = form.text_field :pubdate, class: "datepicker"
  .eight.columns
    .row
      %label &nbsp;
      %button.confirm_save_post{ :type => "submit" } Save Post
    .row
      %label &nbsp;
      %button#publish_post.confirm_save_post Publish Post
      %input#publish{ type: :hidden, name: "publish", value: post.published?.to_s}
.row
  .eight.columns
    = form.label :body
    = form.text_area :body
  .eight.columns
    .label Preview
    #preview
