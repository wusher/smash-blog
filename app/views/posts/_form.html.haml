.row
  .sixteen.columns
    %ul
      - post.errors.full_messages.each do |message|
        %li= message
.row
  .eight.columns
    .row
      = form.label :title
      = form.text_field :title
    .row
      = form.label :pubdate
      = form.text_field :pubdate, class: "datepicker"
  .eight.columns
    .row
      %label &nbsp;
      %button.confirm_save_post{ :type => "submit" } Save Post
    .row
      %label &nbsp;
      %button#publish_post.confirm_save_post Publish Post
      = form.hidden_field :published, value: post.published?.to_s
.row
  .eight.columns
    = form.label :body
    = form.text_area :body
  .eight.columns
    .label Preview
    #preview
