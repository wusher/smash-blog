%article.post.row
  %header.three.columns.info.alpha
    %h2.title
      - if post.slug
        =link_to post.title, post_path(post.slug)
      - else
        =link_to post.title, post_path(post.id)
    %timedate.pubdate{ pubdate: "pubdate"}= post.pubdate.present? && post.pubdate.strftime("%m/%d/%y")
  .ten.columns.post-body!= post.body_html
  .three.columns.omega
    
